<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    android:background="@drawable/nav_editadd"
     tools:context="com.pps.nav"
   >

    <ImageButton
        android:id="@+id/bn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/bn_go_selector" />

    <EditText
        android:id="@+id/editlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editlng"
        android:layout_alignLeft="@+id/editlng"
        android:layout_marginBottom="38dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editlng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bn_go"
        android:layout_alignLeft="@+id/bn_go"
        android:layout_marginBottom="23dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editlat"
        android:layout_alignLeft="@+id/editlat"
        android:layout_marginBottom="24dp"
        android:ems="10" />

</RelativeLayout>
