<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nav_editadd" 
    tools:context="com.pps.nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20.37"
        android:orientation="vertical" >
    </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="16.69"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >

		   <EditText
		       android:id="@+id/tv_addrValue"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_weight="10.31"
		       android:gravity="center_horizontal|center_vertical"
		       android:text="ffffffffffffff" />
	    
		   <EditText
		       android:id="@+id/tv_longValue"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_weight="12.35"
		       android:gravity="center_horizontal|center_vertical"
		       android:text="118.000401" />
	    
		   <EditText
		         android:text="24.527371"
				 android:id="@+id/tv_latiValue"
				 android:gravity="center_horizontal|center_vertical"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:layout_weight="10"/>
	    
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical|center_horizontal"
	    android:orientation="vertical" >

         <ImageButton
	        android:id="@+id/btn_navi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bn_go" />
        
        
    </LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5.85"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>